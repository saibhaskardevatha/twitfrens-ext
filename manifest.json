{
	"name": "TwitFrens",
	"description": "Get mutual connections as a list on Twitter.",
	"version": "1.0.0",
	"manifest_version": 3,
	"icons": {
		"16": "./icons/icon16.png",
		"32": "./icons/icon32.png",
		"128": "./icons/icon128.png"
	},
	"action": {
		"default_icon": {
			"16": "./icons/icon16.png",
			"32": "./icons/icon32.png",
			"128": "./icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "./background.js"
	},
	"permissions": ["tabs"],
	"content_scripts": [
		{
			"matches": ["https://*.twitter.com/*"],
			"run_at": "document_end",
			"js": ["./content-script.js", "./tailwind.js"],
			"css": ["./index.css"]
		}
	]
}
